<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="clip_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:ellipsize="start"
        android:gravity="center|end"
        android:singleLine="true"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="15dp"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:verticalScrollbarPosition="defaultPosition" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AC"
                style="@style/ActionButton"
                android:layout_width="0.7dp"
                android:layout_weight="1"
                android:onClick="ACClick"
                android:text="AC"
                android:textColor="#FFBA2369" />

            <TextView
                android:id="@+id/toSecondCalc"
                style="@style/ActionButton"
                android:layout_width="104dp"
                android:text="Vol.2"
                android:textColor="#D84489" />

            <TextView
                android:id="@+id/division"
                style="@style/ActionButton"
                android:onClick="operationClick"
                android:text="/"
                android:textColor="#FB8E2E" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num7"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="7" />

            <TextView
                android:id="@+id/num8"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="8" />

            <TextView
                android:id="@+id/num9"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="9" />

            <TextView
                android:id="@+id/multiply"
                style="@style/ActionButton"
                android:onClick="operationClick"
                android:text="x"
                android:textColor="#FB8E2E" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num4"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="4" />

            <TextView
                android:id="@+id/num5"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="5" />

            <TextView
                android:id="@+id/num6"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="6" />

            <TextView
                android:id="@+id/sum"
                style="@style/ActionButton"
                android:onClick="operationClick"
                android:text="+"
                android:textColor="#FB8E2E" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num1"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="1" />

            <TextView
                android:id="@+id/num2"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="2" />

            <TextView
                android:id="@+id/num3"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="3" />

            <TextView
                android:id="@+id/gamokleba"
                style="@style/ActionButton"
                android:onClick="operationClick"
                android:text="-"
                android:textColor="#FD7F0F"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dot"
                style="@style/NumberButton"
                android:onClick="dotClick"
                android:text="." />

            <TextView
                android:id="@+id/num0"
                style="@style/NumberButton"
                android:onClick="numberClick"
                android:text="0" />

            <TextView
                android:id="@+id/Back"
                style="@style/NumberButton"
                android:onClick="BackClick"
                android:text="âŒ«" />

            <TextView
                android:id="@+id/equalButton"
                style="@style/ActionButton"
                android:background="#DDFFFFFF"

                android:onClick="equalsClick"
                android:text="="
                android:textColor="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>